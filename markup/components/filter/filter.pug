mixin filter(data)
    .filter
        ul.filter__list
            li.filter__item
                .filter__title
                    a(href="#").filter__link Наличие в магазине
            .filter__content
                ul.filter__choose
                    - var items = ["Во всех магазинах", "В ближайшем ко мне магазине"]
                    each item in items
                        li.filter__choose-item
                            label.filter__choose-label
                                input(name="location" type="radio").filter__choose-input
                                .filter__choose-elem
                                .filter__choose-text= item
                        li.filter__item
                            .filter__content
                                ul.filter__choose.filter__choose--checkboxes
                                - var items = ["Lenovo", "Apple", "Panasonic"]
                                each item in items
                                    li.filter__choose-item
                                        laber.filter__choose-label
                                        input(name="location" type="radio").filter__choose-input
                                        .filter__choose-elem
                                        .filter__choose-text= item
                                .filter__reset--wrap
                                    a(href="#").filter__reser Сбросить фильтр
                        li.filter__item
                            .filter__title
                                a(href="#").filter__title-link Цена
                            .filter__content
                                .filter__slider
                                    .filter__slider-displays
                                        .filter__slider-left
                                            .filter__slider-text от
                                                input(name="" type="" placeholder="").filter__slider-input.filter__slider-input--from
                                        .filter__slider-right
                                            .filter__slider-text до
                                                input(name="" type="" placeholder="").filter__slider-input.filter__slider-input--to
                                    .filter__slider-element
                        li.filter__item
                            .filter__title
                                a(href="#").filter__title-link Цвет
                            .filter__content
                                ul.filter__colors
                                    - var items = ["ffffff", "cccccc", "000000"]
                                    each color in colors
                                        li.filter__color-item
                                            a(href="#" style="background-color: #" + color).filter__colors-link
                            i.filter__item
                                .filter__title
                                    a(href="#").filter__title-link Операционная система
                                .filter__content
                                    ul.filter__choose.filter__choose--checkboxes
                                        - var items = ["android", "ios", "asus"]
                                        each item in items
                                            li.filter__choose-item
                                                laber.filter__choose-label
                                                input(name="location" type="radio").filter__choose-input
                                                .filter__choose-elem
                                                .filter__choose-text= item
                                    .filter__reset--wrap
                                        a(href="#").filter__reser Сбросить фильтр







